---
const { title = "Fulcrum Agentics", description = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}

    <!-- Theme: apply before first paint (prevents flash) -->
    <script is:inline>
      (() => {
        const key = "fa-theme"; // 'light' | 'dark' | 'system'
        const root = document.documentElement;

        let saved = "system";
        try {
          saved = localStorage.getItem(key) || "system";
        } catch {}

        root.classList.remove("theme-light", "theme-dark");
        if (saved === "light") root.classList.add("theme-light");
        if (saved === "dark") root.classList.add("theme-dark");
        // system => no class; your prefers-color-scheme CSS handles it
      })();
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
