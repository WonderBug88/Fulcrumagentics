---
import { siteConfig } from '../config.ts';

const emojiMap = {
  twitter: 'ğ•',     // or 'ğŸ¦' if you prefer old Twitter bird vibe
  github: 'ğŸ™',
  dribbble: 'ğŸ€',
  linkedin: 'in',
};
---

<footer class="bg-mono-black px-4 py-16 text-white sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="mb-12 grid grid-cols-1 gap-12 md:grid-cols-4">
      <div class="md:col-span-1">
        <div class="mb-4 text-2xl font-bold">{siteConfig.site.name}</div>
        <p class="text-mono-light text-sm leading-relaxed">
          {siteConfig.footer.tagline}
        </p>
      </div>

      {siteConfig.footer.columns.map((column) => (
        <div>
          <h4 class="mb-4 font-semibold">{column.title}</h4>
          <ul class="space-y-3 text-sm">
            {column.links.map((link) => (
              <li>
                <a href={link.href} class="text-mono-light hover:text-white">
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="border-mono-darker flex flex-col items-center justify-between border-t pt-8 md:flex-row">
      <p class="text-mono-light mb-4 text-sm md:mb-0">
        &copy; {siteConfig.footer.copyright}
      </p>

      <div class="flex space-x-6">
        {siteConfig.footer.social.map((social) => (
          <a
            href={social.href}
            class="text-mono-light hover:text-white"
            aria-label={social.name}
            title={social.name}
            rel="noopener noreferrer"
            target="_blank"
          >
            <span
              class="inline-flex h-9 min-w-9 items-center justify-center rounded-lg border border-white/15 bg-white/5 px-2 text-sm font-semibold"
              aria-hidden="true"
            >
              {emojiMap[social.icon] ?? social.name.slice(0, 2)}
            </span>
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
