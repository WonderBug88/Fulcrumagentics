---
import { siteConfig } from '../config.ts';
import { testimonialsData } from '../content/testimonials';

// Optional: simple “logo” text labels (no implied endorsement)
const companyLabel = (company) => company;
---

<section class="relative bg-white px-4 py-20 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-7xl">
    <div class="scroll-fade-up mx-auto mb-16 max-w-3xl text-center">
      <h2 class="text-mono-black mb-4 text-4xl font-bold sm:text-5xl">
        {siteConfig.testimonials.title}
      </h2>
      <p class="text-mono-dark text-xl">
        {siteConfig.testimonials.subtitle}
      </p>
      <p class="text-mono-gray mt-3 text-xs">
        Sample testimonials for demonstration purposes.
      </p>
    </div>

    <div class="mb-20 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {testimonialsData.map((testimonial, index) => (
        <div
          class={`scroll-fade-up border-mono-black bg-mono-lighter rounded-xl border-l-4 p-8 shadow-lg stagger-${(index % 9) + 1}`}
        >
          <div class="mb-4 flex gap-1" aria-label={`${testimonial.rating} out of 5 stars`}>
            {Array.from({ length: testimonial.rating }).map(() => (
              <span aria-hidden="true">★</span>
            ))}
          </div>

          <p class="text-mono-dark mb-6 leading-relaxed">
            “{testimonial.quote}”
          </p>

          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <div class="bg-mono-black mr-4 flex h-12 w-12 items-center justify-center rounded-full font-semibold text-white">
                {testimonial.initials}
              </div>
              <div>
                <div class="text-mono-black font-semibold">
                  {testimonial.author}
                </div>
                <div class="text-mono-gray text-sm">{testimonial.role}</div>
              </div>
            </div>

            <div class="text-mono-gray text-xs font-semibold tracking-wide uppercase opacity-70">
              {companyLabel(testimonial.company)}
            </div>
          </div>
        </div>
      ))}
    </div>

    <div class="scroll-fade-up">
      <div class="bg-mono-lighter rounded-2xl p-12">
        <p class="text-mono-gray mb-10 text-center text-sm tracking-wide uppercase">
          Works great with tools you already use
        </p>

        <div class="mx-auto grid max-w-6xl grid-cols-2 items-center gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
          {[
            'Email',
            'Google Drive',
            'Slack',
            'HubSpot',
            'Shopify',
            'Postgres',
            'BigCommerce',
            'Notion',
            'Zapier',
            'Make.com',
            'GitHub',
            'Vercel',
          ].map((label) => (
            <div class="border-mono-lighter flex items-center justify-center rounded-lg border bg-white px-3 py-3 text-sm font-medium">
              {label}
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
